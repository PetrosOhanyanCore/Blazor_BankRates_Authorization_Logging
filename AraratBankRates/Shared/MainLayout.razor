@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <NavLink href="logout" Match="NavLinkMatch.All">
                        Logout
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="login" Match="NavLinkMatch.All">
                        Login
                    </NavLink>
                    <NavLink href="register" Match="NavLinkMatch.All">
                        Register
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
